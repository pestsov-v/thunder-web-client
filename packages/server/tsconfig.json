{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "ES2020",
    "allowJs": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strict": true,
    "newLine": "lf",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "rootDir": "./src",
    "paths": {
      "@Server/Symbols": ["./src/ioc/ioc.server.symbols.ts"],
      "@Server/Container": ["./src/ioc/ioc.server.ts"],
      "@Server/Package": ["./src/packages/packages.ts"],
      "@Server/Types": ["./types/index.d.ts"]
    },
    "noEmit": false
  },
  "include": [
    "next-env.d.ts",
    "./src/**/*",
    "./server/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "src/pages"
  ],
}
