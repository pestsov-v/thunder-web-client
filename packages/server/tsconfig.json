{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@Server/Symbols": [
        "./src/ioc/ioc.server.symbols.ts"
      ],
      "@Server/Container": [
        "./src/ioc/ioc.server.ts"
      ],
      "@Server/Package": [
        "./src/packages/packages.ts"
      ],
      "@Server/Types": [
        "./types/index.d.ts"
      ]
    },
  },
  "include": [
    "next-env.d.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx",
  ],
  "exclude": [
    "node_modules"
  ]
}
