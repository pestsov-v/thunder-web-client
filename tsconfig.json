{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "ES2020",
    "allowJs": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strict": true,
    "newLine": "lf",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      // Edge
      "@Edge/Symbols": [
        "src/edge/ioc/ioc.edge.symbols.ts"
      ],
      "@Edge/Container": [
        "src/edge/ioc/ioc.edge.ts"
      ],
      "@Edge/Package": [
        "src/edge/packages/packages.ts"
      ],
      "@Edge/Types": [
        "types/edge/index.d.ts"
      ]
    },
    "noEmit": false,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "./src/packages/server/**/*",
    "./types/**/*.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "visualizer",
    "src/pages"
  ]
}
