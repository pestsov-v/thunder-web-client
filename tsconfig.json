{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      // Server
      "@Server/Package": ["./src/server/packages/packages.ts"],
      "@Server/Package/Types": ["./types/server/packages/packages.ts"],

      // Edge
      "@Edge/Common": ["./src/edge/common/index.ts"],
      "@EdgeSymbols": ["./src/edge/ioc/ioc.edge.symbols.ts"],
      "@EdgeContainer": ["./src/edge/ioc/ioc.edge.ts"],
      "@Edge/Types": ["./types/edge/index.d.ts"],
      "@Edge/Package": ["./src/edge/packages/packages.ts"],
      "@Edge/Package/Types": ["./types/edge/packages/packages.ts"],

      // Common
      "@Vendor": ["./src/edge/vendor/index.ts"],
      "@Vendor/Types": ["./types/edge/vendor/index.d.ts"],
      "@Utility/Types": ["./types/common/index.d.ts"],

      // Schema
      "@Schema/*": ["./src/schema/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}
